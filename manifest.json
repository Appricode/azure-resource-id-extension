{
  "manifest_version": 3,
  "name": "Azure Resource ID Copy",
  "version": "1.0",
  "description": "A Chrome extension to copy the Azure Resource ID of the active tab to the clipboard.",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Copy Azure Resource ID"
  },
  "icons": {
    "16": "src/icon16.png",
    "48": "src/icon48.png",
    "128": "src/icon128.png"
  }
}